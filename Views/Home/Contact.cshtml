@model DataGov_API_Intro.Models.ContactModel;

@{
    ViewData["Title"] = "Contact Page";
}

<div class="text-left">
    <h2 class="display-5">Current Contact Information</h2>
        <p>Name: @Model.Name</p>
        <p>Email: @Model.Email</p>
        <p>Phone number: @Model.Phone</p>
</div>

<div class="form-control-sm">
    <h2 class="display-5">Update Contact Information</h2>
    <form asp-controller="Home" asp-action="Contact" method="post">

        <div class="form-group">
            <label for="Name">Name</label>
            <input asp-for="Name" type="text" class="form-control" placeholder="Enter Name">
            <small class="form-text text-muted">Please enter name of contact</small>
        </div>

        <div class="form-group">
            <label for="Email">Email address</label>
            <input asp-for="Email" type="email" class="form-control" placeholder="Enter email address">
            <small class="form-text text-muted">Enter a valid email address</small>
        </div>

        <div class="form-group">
            <label for="Phone">Phone Number</label>
            <input asp-for="Phone" type="tel" class="form-control" placeholder="Enter phone number">
            <small class="form-text text-muted">We will call you in case of an emergency.</small>
        </div>

        <!--
        <p>Name: <input asp-for="Name" /></p>
        <p>Email: <input asp-for="Email" /></p>
        <p>Phone number: <input asp-for="Phone" /></p>
        -->

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <p />

    <div class="text-right">
        <!-- AR -->
        <p />
        <a asp-controller="Home" asp-action="Index">Home</a>|<a asp-controller="Home" asp-action="Contact">Contact</a>|<a asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</div>


